# Backend (mcp-server)
BACKEND_BASE_URL=http://localhost:8787
# Must match apps/mcp-server IMESSAGE_BRIDGE_SHARED_SECRET
BRIDGE_SHARED_SECRET=dev_shared_secret_change_me

# iMessage RPC (macOS only)
# Path to the imsg binary. Put it on PATH or point to a full path.
IMSG_BIN=imsg
IMSG_REGION=US
IMSG_SEND_SERVICE=auto

# Watch options
# Watch all chats by default. To constrain:
# IMSG_WATCH_CHAT_ID=1
IMSG_ATTACHMENTS=true

# State (used for watch.subscribe since_rowid)
STATE_DIR=./.state

# Outbox polling
OUTBOX_POLL_INTERVAL_MS=1000
OUTBOX_MAX_BATCH_SIZE=10

