{
  "name": "@fashion/mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "npm --workspace @fashion/shared run build",
    "dev": "node --env-file=.env --watch --loader ts-node/esm src/index.ts",
    "prebuild": "npm --workspace @fashion/shared run build",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "db:migrate": "node --env-file=.env --loader ts-node/esm src/db/migrate.ts",
    "db:seed": "node --env-file=.env --loader ts-node/esm src/db/seed.ts",
    "test": "node --env-file=.env.example --loader ts-node/esm --test src/**/*.test.ts",
    "test:integration": "node --env-file=.env.example --loader ts-node/esm --test src/**/*.integration.test.ts"
  },
  "dependencies": {
    "@fashion/shared": "0.1.0",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "jimp": "^1.6.0",
    "jose": "^5.6.3",
    "pg": "^8.12.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "stripe": "^18.4.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
